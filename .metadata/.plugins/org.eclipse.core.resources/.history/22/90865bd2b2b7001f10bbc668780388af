public class CounterApp {

    public static void main(String[] args) {
        Counter counter1 = new Counter();
        Counter counter2 = new Counter();

        counter1.increment();
        counter1.increment();
        counter2.increment();

        System.out.println("Counter 1 - Local Count: " + counter1.getLocalCount());
        System.out.println("Counter 2 - Local Count: " + counter2.getLocalCount());
        System.out.println("Total Count: " + Counter.getTotalCount());
    }
}